<!DOCTYPE html>
<html class="has-navbar-fixed-top">
<%- include("partials/_head.ejs")%>

<body>
  <%- include("partials/_navbar.ejs")%>
  <section class="hero is-halfheight">
    <div class="hero-body">
      <div class="container">
        <div class="field">
          <form id="upload-form" action="/upload" method="POST" enctype="multipart/form-data">
            <div id="upload-files" class="file is-centered is-boxed is-primary has-name is-large">
              <label class="file-label">
                <input class="file-input" type="file" name="uploads" accept=".html, .mp3" multiple="multiple" hidden>
                <span class="file-cta">
                  <span class="file-icon">
                    <i class="fas fa-upload"></i>
                  </span>
                  <span class="file-label">
                    Upload files here...
                  </span>
                </span>
                <span class="file-name has-text-centered">
                  Required Files: mp3, book, ncc
                </span>
              </label>
            </div>
            <div class="columns pt-5 is-centered">
              <div class="column is-half">
                <progress class="progress progress-bar is-primary is-medium" value="0" max="100"
                  style="display: none;">0%</progress>
                <textarea id="aeneas-feed" class="textarea is-large is-primary has-fixed-size" style="display: none;"
                  readonly></textarea>
              </div>
            </div>
            <!-- upload.js automatically submits the form when files input changes -->
          </form>
        </div>
      </div>
    </div>
  </section>
  <section class="section">
    <div class="container">
      <% if (zip_files.length != 0) { %>
      <% for(var i = 0; i < zip_files.length; i++) { %>
      <a href="output/<%= zip_files[i].filename %>" class="box has-background-primary has-text-white">
        <nav class="level">
          <div class="level-left">
            <div class="level-item"><i class="fa fa-download" aria-hidden="true"></i></div>
            <div class="level-item">
              <p><%= zip_files[i].filename %></p>
            </div>
          </div>
          <div class="level-right">
            <div class="level-item">
              <p><%= new Date(zip_files[i].date).toLocaleString('en-GB') %></p>
            </div>
          </div>
        </nav>
      </a>
      <%}%>
        <%}%>
    </div>
  </section>
  <script src="/socket.io/socket.io.js"></script>
  <script src="javascript/upload.js"></script>
  <script>
    socket.on('newdata', (d) => {
      //console.log(d);
      $("#aeneas-feed").prepend(d);
    });

    socket.on('refresh', () => {
      $("#aeneas-feed").prepend("Refreshing interface, please wait.");
      setTimeout(() => {  location.reload(); }, 2000);
    });
  </script>
</body>

</html>